{
  "name": "hypescript.org",
  "description": "a small scripting language for the web",
  "keywords": [
    "scripting",
    "HTML"
  ],
  "version": "0.0.1-alpha0",
  "homepage": "https://hypescript.org/",
  "bugs": {
    "url": "https://github.com/bigskysoftware/hypescript/issues"
  },
  "license": "BSD 2-Clause",
  "files": [
    "LICENSE",
    "README.md",
    "dist/*.js"
  ],
  "main": "dist/hypescript.min.js",
  "unpkg": "dist/hypescript.min.js",
  "scripts": {
    "test": "mocha-chrome test/index.html",
    "dist": "cp -r src/* dist/ && npm run-script uglify && gzip -k -f dist/hypescript.min.js > dist/hypescript.min.js.gz && exit",
    "www": "node scripts/www.js",
    "uglify": "uglifyjs -m eval -o dist/hypescript.min.js dist/hypescript.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bigskysoftware/hypescript.git"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.10.0",
    "chai": "^4.2.0",
    "eleventy-plugin-sass": "^1.0.0",
    "fs-extra": "^9.0.0",
    "mocha": "^7.1.1",
    "mocha-chrome": "^2.2.0",
    "sinon": "^9.0.2",
    "uglify-js": "^3.9.1"
  }
}
